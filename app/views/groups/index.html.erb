<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
    <%= render 'layouts/header' %>
    <div class="content-wrapper">

      <section class="content-header">
        <h1>All Group Details</h1>
        <%= link_to "Add New Group", new_group_path %>
      </section>

      <section class="content">
        <div class="row">
          <div class="col-xs-12">
            <div class="box">
              <div class="box-body">
                <% if current_user.admin? %>
                  <%= form_tag groups_path, method: :get, class: "form-inline" do %>
                    <div class="form-group">
                      <label for="user_select">User</label>
                      <%= collection_select :group, :user_id, @users, :id, ->(user) { "#{user.email}" }, { prompt: "Please select a user", selected: @selected_user_id }, { class: 'form-control', id: 'user_select' } %>
                    </div>
                    <div class="form-group">
                      <%= submit_tag 'Get Groups', class: 'btn btn-primary' %>
                    </div>
                  <% end %>
                <% end %>

                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>
                        <i class="ion ion-edit"></i>
                      </th>
                      <th>
                        <i class="ion ion-trash-b"></i>
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @groups.each do |group| %>
                      <tr>
                        <td><%= link_to group.name, group_group_clients_path(group), class: "group-link" %></td>
                        <td><%= link_to "", edit_group_path(group), class: "ion ion-edit" %></td>
                        <td>
                          <%= link_to group, method: :delete, data: { confirm: 'Are you sure?' } do %>
                            <i class="ion ion-trash-b"></i>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
    <%= render 'layouts/footer' %>
  </div>
  <script>
    $(function () {
      $("#example1").DataTable({
        "pageLength": 50,
      });
    });
  </script>
</body>
