<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
    <%= render 'layouts/header' %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>Create Order</h1>
        <ol class="breadcrumb">
          <li><a href="#"><i class="fa fa-home"></i>Home Page</a></li>
          <li class="active">Add Order</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="row">
          <!-- left column -->
          <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-header">
              <div class="box-header with-border">
                <h3 class="box-title">Basic Information</h3>
              </div>
              <!-- /.box-header -->
              <!-- form start -->
              <%= form_for @order do |f| %>
                <% if @order.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@order.errors.count, 'error') %> prohibited this item from being saved:</h2>
                    <ul>
                      <% @order.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

                <div class="box-body">
                  <div class="form-group">
                  <%= f.label :delivery_on, 'Delivery Date' %>
                  <%= f.text_field :delivery_on, class: 'form-control datepicker', required: true, readonly: true %>
                  </div>
                  <div class="form-group">
                    <label>Client Name</label>
                    <%= f.select(:member_id, @members.map { |member| [ "#{member.name} (#{member.email})", member.id ]}, {}, { :class => 'form-control' })%>
                  </div>
                  <div class="form-group">
                    <label>Vehicle Id</label>
                    <%= f.select(:vehicle_detail_id, @vehicle_details.map { |vehicle_detail| [ "#{vehicle_detail.item.vehicle_type.name} (CH - #{vehicle_detail.chassie_no}) (EN - #{vehicle_detail.engine_no})", vehicle_detail.id ]}, {}, { :class => 'form-control' })%>
                  </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                  <%= f.submit 'Submit', class: 'btn btn-primary' %>
                </div>
              <% end %>
            </div>
            <!-- /.box -->
          </div>
          <!--/.col (right) -->
        </div>
        <!-- /.row -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%= render 'layouts/footer' %>
    <!-- ./wrapper -->
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
      $(document).ready(function () {
        $.widget.bridge('uibutton', $.ui.button);
        $('.datepicker').datepicker({format: 'yyyy/mm/dd'});
      });
    </script>
  </div>
</body>
